

    <div  class="row">

<%= render 'books/list', user: current_user,book: @book %>

<div class="col-xs-9">
<h1>Users</h1>

<table class="table table-striped">
	<tr>
		<th>image</th>
		<th>name</th>
		<th></th>
	</tr>

<% @users.each do |user| %>
    <tr>
    	<td><%= attachment_image_tag user,:profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
    	<td><span><%= user.name %></span></td>
    	<td><%=link_to"Show",  user_path(user.id) %>
            <% end %></td>
    </tr>

</table>
</div>
</div>
</div>








